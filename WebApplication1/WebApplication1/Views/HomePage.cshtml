@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.HomePage>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "Master.cshtml";
}

<header class="video-header">
  <div class="overlay"></div>
  <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
    <source src="https://storage.googleapis.com/coverr-main/mp4/Mt_Baker.mp4" type="video/mp4">
  </video>
  <div class="container h-100">
    <div class="d-flex h-100 text-center align-items-center">
      <div class="w-100 text-white">
        <h1 class="display-5">@Umbraco.Field("siteTitle")</h1>
        <p class="lead mb-0"><i>2019</i></p>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <h1 class="mt-4">@Umbraco.Field("siteTitle")</h1>
  @Umbraco.Field("mainContent")
  <br />
  <hr>
  <br >
 <h4 class="text-center">Vores seneste projekter</h4>
 @Umbraco.RenderMacro("listNewestProjects", new {numOfProjects="3"}) 
  
</div>


